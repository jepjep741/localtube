FROM node:20-alpine

# Install ffmpeg and postgresql-client for migrations
RUN apk add --no-cache ffmpeg postgresql-client

WORKDIR /app

# Copy package files
COPY package*.json ./

# Install dependencies
RUN npm install

# Copy application files
COPY . .

# Create directories for data persistence
RUN mkdir -p /app/thumbnails

# Expose port
EXPOSE 3001

# Use the PostgreSQL server
CMD ["node", "server-pg.js"]